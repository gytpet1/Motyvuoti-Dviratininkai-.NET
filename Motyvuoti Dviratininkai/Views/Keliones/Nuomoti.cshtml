@model Motyvuoti_Dviratininkai.Models.Kelione
@{
    ViewData["Title"] = "Nuomoti";
}

<table class="table" style="width:30%;margin-top:4%">
    <tbody>
        <tr>
            <th>Keliones Pradzios Adresas: </th>
            <td>@Model.pradziosAdresas:</td>
        </tr>
        <tr>
            <th>Keliones Pradzia: </th>
            <td>@Model.kelionesPradzia:</td>
        </tr>
        <tr>
            <th>Nuomos Kaina (€/val.):</th>
            <td>@Model.Dviratis.nuomosKaina €</td>
        </tr>
        <tr>
            <th>Nuvaziotas Atstumas:</th>
            <td>@Model.nuvaziuotasAtstumas km.</td>
        </tr>
        <tr>
            <th>Dabartine Suma:</th>

            <td style="color:crimson">@DateTime.UtcNow.Subtract(@Model.kelionesPradzia).Multiply(Model.Dviratis.nuomosKaina).TotalHours.ToString().Substring(0, 4).Replace(':',',') €</td>
        </tr>
    </tbody>
</table>

<div>
    <button><a asp-action="Uzbaigti" asp-route-id="@Model.KelioneId">Baigti Kelione</a></button>
</div>
